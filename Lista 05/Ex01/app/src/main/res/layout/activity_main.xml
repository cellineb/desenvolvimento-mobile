<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="172dp">

        <RadioButton
            android:id="@+id/rbUmDado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/umDado" />

        <RadioButton
            android:id="@+id/rbDoisDados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/doisDados" />

        <RadioButton
            android:id="@+id/rbTresDados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tresDados" />
    </RadioGroup>

    <TextView
        android:id="@+id/tvQntdDados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/qntdDados"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="150dp" />

    <TextView
        android:id="@+id/tvFaces"
        android:layout_width="370dp"
        android:layout_height="20dp"
        android:text="@string/numFaces"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="65dp" />

    <Spinner
        android:id="@+id/spnFaces"
        android:layout_width="150dp"
        android:layout_height="48dp"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="76dp" />

    <Button
        android:id="@+id/btnLancar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lancar"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="413dp" />

    <TextView
        android:id="@+id/tvSaida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="206dp"
        tools:layout_editor_absoluteY="591dp" />

    <TextView
        android:id="@+id/tvNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nome"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="9dp" />

    <TextView
        android:id="@+id/tvRA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RA"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>